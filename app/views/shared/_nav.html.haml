%nav.navigation-bar(js-nav-bar)
  .navigation-bar--rounded-shadow
    .navigation-bar--rounded-shadow--shadow(js-rounded-shadow)

  .navigation-bar--drawer-toggle(js-toggle-drawer)
    .navigation-bar--drawer-toggle-line
    .navigation-bar--drawer-toggle-line
    .navigation-bar--drawer-toggle-line

  .container.navigation-bar--container
    =link_to root_path, :"js-logo" => true do
      =image_tag "greenback.svg", class: "navigation-bar--logo", :"s-screen-full" => true
      =image_tag "greenback-mark-dark.svg", class: "navigation-bar--logo"

    -if logged_in?
      .navigation-bar--links
        =link_to dashboard_path do
          %li.navigation-bar--user-links
            %span Dashboard

        =link_to budgets_path do
          %li.navigation-bar--user-links(nav-budgets)
            %span Budgets

        =link_to bills_path do
          %li.navigation-bar--user-links
            %span Bills

        =link_to debts_path do
          %li.navigation-bar--user-links
            %span Debts

      .navigation-bar--dropdown-toggle(js-toggle-navigation-dropdown)
        Welcome,
        =current_user.first_name
        .navigation-bar--dropdown(js-navigation-dropdown)
          =link_to logout_path, method: :delete do
            %li.navigation-bar--dropdown-link Logout
    -else
      =link_to signup_path, class: "navigation-bar--button" do
        %button.primary Sign Up
      =link_to login_path, class: "navigation-bar--button" do
        %button.secondary Log In

#logo-modal.modal(js-modal)
  .modal--container
    .modal--overlay(js-hide-modal)
    .modal--content
      .modal--close(js-hide-modal) x
      %h1.centered Looking for this?
      Download high quality logo assets to use wherever you need.

      .logo-download-grid
        .logo-download-grid--item
          %h2 SVG
          %strong Scalable Vector Graphics
          %p An image format for two-dimensional graphics with support for interactivity and animation.
          %button.primary Download as .SVG

        .logo-download-grid--item
          %h2 AI
          %strong Adobe Illustrator Artwork
          %p A file format for representing single-page, vector-based drawings in either the EPS or PDF formats.
          %button.primary Download as .AI

        .logo-download-grid--item
          %h2 PNG
          %strong Portable Network Graphics
          %p A raster graphics file format that supports lossless data compression and transparency.
          %button.primary Download as .PNG

        .logo-download-grid--item
          %h2 JPEG
          %strong Joint Photographic Experts Group
          %p A standard for compressed images usually used for photographs, that does not support transparency.
          %button.primary Download as .JPEG


        
